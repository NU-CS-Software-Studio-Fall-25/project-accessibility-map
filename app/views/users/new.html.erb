<div class="lg:px-[144px] md:px-[96px] px-[36px] w-full py-8 flex flex-col justify-center items-center">
  <div class="max-w-3xl w-full">
    <h2 class="text-3xl font-bold mb-6">Sign Up</h2>

    <%= form_with(model: @user, url: users_path, class: "space-y-4") do |form| %>
      <% if form.object.errors.any? %>
        <div class="rounded-md bg-red-50 p-4 text-red-700">
          <p class="font-semibold mb-2"><%= pluralize(form.object.errors.count, "error") %> prohibited this user from being saved:</p>
          <ul class="list-disc pl-5">
            <% form.object.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :email_address, class: "block text-sm font-medium mb-1" %>
        <%= form.email_field :email_address,
              class: "w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-300" %>
      </div>

      <div>
        <%= form.label :password, class: "block text-sm font-medium mb-1" %>
        <%= form.password_field :password,
              class: "w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-300" %>
      </div>

      <div>
        <%= form.label :password_confirmation, class: "block text-sm font-medium mb-1" %>
        <%= form.password_field :password_confirmation,
              class: "w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-300" %>
      </div>

      <div>
        <%= form.submit "Sign Up",
              class: "w-full md:w-auto rounded-md bg-blue-700 hover:bg-blue-800 px-6 py-2 font-medium text-white transition" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <%= link_to "Already have an account? Log In", new_session_path, class: "text-blue-600 hover:underline" %>
    </div>
  </div>
</div>
