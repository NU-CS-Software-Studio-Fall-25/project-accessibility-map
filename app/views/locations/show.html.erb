<% content_for :title, @location.name %>

<div class="w-full lg:px-[144px] md:px-[96px] px-4 py-6 flex flex-col gap-4">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 text-green-700 font-medium rounded-md inline-block" id="notice" role="status" aria-live="polite"><%= notice %></p>
  <% end %>
  <% if alert.present? %>
    <p class="py-2 px-3 bg-red-50 text-red-700 font-medium rounded-md inline-block" id="alert" role="alert" aria-live="polite"><%= alert %></p>
  <% end %>

  <section class="flex flex-col justify-between gap-2">
    <h1 class="text-3xl font-bold"><%= @location.name %></h1>
    <span class="text-gray-900 text-sm break-words">
      <%= @location.address %>,
      <%= @location.city %>,
      <%= @location.state %>
      <%= @location.zip %>
    </span>
    <!-- buttons for editing location and add image -->
    <div class="flex gap-2 flex-wrap text-nowrap grow-0">
      <%= link_to "Download PDF",
        location_path(@location, format: :pdf),
        class: "py-2 px-4 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 focus:z-10 focus:ring-4 focus:ring-gray-100 transition" %>
      <% if current_user %>
        <% if @is_favorited %>
          <%= button_to "Remove From Favorites",
            unfavorite_location_path(@location),
            method: :delete,
            class: "py-2 px-4 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 focus:z-10 focus:ring-4 focus:ring-gray-100 transition" %>
        <% else %>
          <%= button_to "Add To Favorites",
            favorite_location_path(@location),
            method: :post,
            class: "py-2 px-4 text-sm font-medium text-white focus:outline-none bg-blue-600 hover:bg-blue-700 rounded-lg focus:z-10 focus:ring-4 focus:ring-blue-300 transition" %>
        <% end %>
      <% end %>
      <% if current_user == @location.user %>
      <%= link_to "Edit Location",
        edit_location_path(@location),
        class: "py-2 px-4 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 focus:z-10 focus:ring-4 focus:ring-gray-100 transition" %>
      <%= link_to "Delete Location",
        location_path(@location),
        data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this location?" },
        class: "text-sm rounded-md bg-red-500 hover:bg-red-600 px-4 py-2 font-medium text-white transition flex justify-center items-center" %>
          <% end %>
    </div>
  </section>

  <section id="gallery" class="flex gap-4 overflow-x-auto">
    <% if @location.pictures.attached? %>
      <% @location.pictures.each do |picture| %>
        <% next unless picture.persisted? %>
        <% next unless picture.variable? %>
        <div class="relative group flex-shrink-0">
          <% begin %>
            <% alt_text = picture.metadata["alt_text"].presence || "Location image" %>
            <%= image_tag(
                  picture.variant(resize_to_limit: [nil, 200]),
                  alt: alt_text,
                  class: "h-64 object-cover rounded-lg"
                ) %>
            <% rescue => e %>
            <% Rails.logger.error("Variant render failed for attachment #{picture.id}: #{e.class} #{e.message}") %>
            <% next %>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <div class="h-16 flex items-center">
        <p class="text-sm font-normal text-gray-700">
          No photos yet for this location.
        </p>
      </div>
    <% end %>
  </section>

  <!-- chips for feature model -->
  <section class="flex flex-row gap-2 flex-wrap">
    <% if @location.features.any? %>
      <% @location.features.each do |feature| %>
        <span class="bg-blue-600 text-white text-sm font-medium px-4 py-1.5 rounded-full text-nowrap"><%= feature.feature %></span>
      <% end %>
    <% else %>
      <span class="bg-blue-600 text-white text-sm font-medium px-4 py-1.5 rounded-full text-nowrap">No features available</span>
    <% end %>
  </section>

  <!-- divider line -->
  <hr class="h-px bg-gray-200 border-0">

  <!-- Map preview -->
  <% if @location.latitude && @location.longitude %>
    <div class="w-full rounded-md border overflow-hidden border-none" style="height: 400px; pointer-events: none;" role="img" aria-label="Map showing location at <%= @location.full_address %>">
      <%= js_map [{latitude: @location.latitude, longitude: @location.longitude, label: @location.name}],
          controls: false,
          width: "100%",
          height: "100%" %>
    </div>
  <% end %>

  <!-- divider line -->
  <hr class="h-px bg-gray-200 border-0">

  <!-- reviews -->
  <section class="flex flex-col gap-4">
    <div class="flex flex-row justify-between items-center">
      <h2 class="text-2xl font-bold"><%= pluralize(@location.reviews.count, 'Review') %></h2>
      <% if current_user %>
        <button data-modal-target="add-review-modal" data-modal-toggle="add-review-modal" type="button" class="py-2 px-4 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 focus:z-10 focus:ring-4 focus:ring-gray-100 border border-gray-200 transition">Add Review</button>
      <% end %>
    </div>
    <div class="flex flex-col items-stretch gap-4">
      <% if @reviews.any? %>
        <% @reviews.each do |review| %>
          <%= render review %>
        <% end %>
      <% else %>
        <p class="text-sm font-normal text-gray-700">
          No reviews yet for this location.
        </p>
      <% end %>
    </div>
  </section>
</div>

<!-- Modal backdrop -->
<div id="add-review-modal-backdrop" class="hidden fixed inset-0 z-40 bg-gray-900/20 dark:bg-gray-900/30"></div>

<div id="add-review-modal" tabindex="-1" aria-hidden="true" aria-labelledby="add-review-modal-title" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
  <div class="relative p-4 w-full max-w-[800px] max-h-full">
    <div class="relative bg-white rounded-lg shadow-sm">
      <div class="flex items-center justify-between p-4 rounded-t">
        <h2 id="add-review-modal-title" class="text-lg font-semibold text-gray-900">
          Add Review
        </h2>
        <button type="button" class="transition bg-transparent hover:bg-gray-100 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" data-modal-toggle="add-review-modal" aria-label="Close add review modal">
          <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
          </svg>
          <span class="sr-only">Close modal</span>
        </button>
      </div>
      <div class="px-4 pb-4">
        <%= render "reviews/new_form", review: @review, location: @location %>
      </div>
    </div>
  </div>
</div>

<script>
  function setupAddReviewModal() {
    const modal = document.getElementById('add-review-modal');
    if (!modal) return;

    const backdrop = document.getElementById('add-review-modal-backdrop');
    if (!backdrop) return;

    let lastState = modal.classList.contains('hidden');

    // Function to sync backdrop with modal state
    function syncBackdrop() {
      const isHidden = modal.classList.contains('hidden');
      if (isHidden !== lastState) {
        lastState = isHidden;
        if (isHidden) {
          backdrop.classList.add('hidden');
        } else {
          backdrop.classList.remove('hidden');
        }
      }
    }

    // Use requestAnimationFrame for smooth polling
    function checkModalState() {
      syncBackdrop();
      requestAnimationFrame(checkModalState);
    }
    checkModalState();

    // Also sync immediately when toggle buttons are clicked
    document.querySelectorAll('[data-modal-toggle="add-review-modal"], [data-modal-hide="add-review-modal"]').forEach(button => {
      button.addEventListener('click', function() {
        // Check multiple times to catch Flowbite's changes
        setTimeout(syncBackdrop, 0);
        setTimeout(syncBackdrop, 10);
        setTimeout(syncBackdrop, 50);
        setTimeout(syncBackdrop, 100);
      });
    });

    // Handle backdrop click to close modal via Flowbite
    backdrop.addEventListener('click', function() {
      const closeButton = document.querySelector('[data-modal-hide="add-review-modal"]');
      if (closeButton) {
        closeButton.click();
      }
    });

    // Handle escape key
    function handleEscape(e) {
      if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
        const closeButton = document.querySelector('[data-modal-hide="add-review-modal"]');
        if (closeButton) {
          closeButton.click();
        }
      }
    }

    document.addEventListener('keydown', handleEscape);

    // Initial sync
    syncBackdrop();
  }

  document.addEventListener('DOMContentLoaded', setupAddReviewModal);
  document.addEventListener('turbo:load', setupAddReviewModal);

  // Open modal if there are review errors after form submission
  function openModalIfErrors() {
    // Check if there's an alert (error) message
    const alertMessage = document.getElementById('alert');
    if (alertMessage && alertMessage.textContent.includes('Review')) {
      const modal = document.getElementById('add-review-modal');
      const backdrop = document.getElementById('add-review-modal-backdrop');
      if (modal && backdrop) {
        // Small delay to ensure DOM is ready
        setTimeout(() => {
          modal.classList.remove('hidden');
          backdrop.classList.remove('hidden');
          // Trigger Flowbite modal show if available
          if (typeof window.Flowbite !== 'undefined') {
            const modalInstance = new window.Flowbite.Modal(modal);
            modalInstance.show();
          }
        }, 100);
      }
    }
  }

  document.addEventListener('DOMContentLoaded', openModalIfErrors);
  document.addEventListener('turbo:load', openModalIfErrors);
</script>
