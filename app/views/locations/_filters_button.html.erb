<%
  selected_count = params[:feature_ids]&.reject(&:blank?)&.count || 0
  selected_count += 1 if params[:favorites_only] == "1"
%>

<div class="px-4">
  <button data-modal-target="filters-modal"
          data-modal-toggle="filters-modal"
          type="button"
          class="w-full text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 focus:z-10 focus:ring-4 focus:ring-gray-100 px-4 py-2 flex items-center justify-center gap-2">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 3c2.755 0 5.455.232 8.083.678.533.09.917.556.917 1.096v1.044a2.25 2.25 0 01-.659 1.591l-5.432 5.432a2.25 2.25 0 00-.659 1.591v2.927a2.25 2.25 0 01-1.244 2.013L9.75 21v-6.568a2.25 2.25 0 00-.659-1.591L3.659 7.409A2.25 2.25 0 013 5.818V4.774c0-.54.384-1.006.917-1.096A48.32 48.32 0 0112 3z" />
    </svg>
    Filters
    <% if selected_count > 0 %>
      <span class="bg-blue-600 text-white text-xs font-medium px-2 py-0.5 rounded-full"><%= selected_count %></span>
    <% end %>
  </button>
</div>

