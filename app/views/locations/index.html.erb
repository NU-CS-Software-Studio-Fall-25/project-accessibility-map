<% content_for :title, "Locations" %>

<div class="flex" >
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div id="map" class="w-3/4">
    map placeholder
  </div>

  <div id="locations" class="w-1/4 divide-y divide-gray-200 space-y-5">
    <% if @locations.any? %>
      <% @locations.each do |location| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render location %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No locations found.</p>
    <% end %>
  </div>
</div>
