<% content_for :title, "Locations" %>

<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
<% end %>

<div class="flex-1 flex" >
  <div id="map" class="w-3/4">
    map placeholder
  </div>

  <div id="locations" class="w-1/4  flex flex-col justify-start items-center gap-4 overflow-y-auto border-l border-b border-gray-200 p-4">
    <% if @locations.any? %>
      <% @locations.each do |location| %>
        <%= render location %>
      <% end %>
    <% else %>
      <p class="text-center my-10">No locations found.</p>
    <% end %>
  </div>
</div>
