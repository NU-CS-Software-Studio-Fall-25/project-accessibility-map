<div id="<%= dom_id location %>" class="w-full flex flex-col justify-center items-start gap-2 border border-gray-200 rounded-xl p-4">
  <div>
    <h3 class="font-bold text-md">
      <%= location.name %>
    </h3>
    <span class="text-sm">
      <%= location.address %>,
      <%= location.city %>,
      <%= location.state %>
      <%= location.zip %>
    </span>
  </div>
  <%= link_to "See More", location_path(location), class: "text-sm bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium px-4 py-1.5 rounded-full text-nowrap" %>
</div>
