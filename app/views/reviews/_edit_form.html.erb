<%= form_with(model: [location, review], class: "space-y-4 text-sm") do |form| %>
  <% if review.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-700 px-3 py-2 font-medium rounded-md mt-3" role="alert" aria-live="polite">
      <p class="font-semibold"><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</p>
      <ul class="list-disc ml-6">
        <% review.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :body, "Edit Review", class: "sr-only hidden" %>
    <%= form.textarea :body, minlength: 25, maxlength: 220, required: true, placeholder: "Enter your review", rows: "4", class: "shadow-sm text-sm block p-2.5 w-full text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="flex flex-row-reverse gap-2">
    <%= form.submit "Save Changes", class: "text-white inline-flex items-center bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 text-center transition-colors" %>
    <button data-modal-toggle="edit-review-modal-<%= review.id %>" type="button" class="py-2 px-4 font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 focus:z-10 focus:ring-4 focus:ring-gray-100 transition-colors">
      Cancel
    </button>
  </div>
<% end %>
